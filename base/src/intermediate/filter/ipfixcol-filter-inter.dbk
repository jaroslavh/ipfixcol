	<refmeta>
		<refentrytitle>ipfixcol-filter-inter</refentrytitle>
		<manvolnum>1</manvolnum>
		<refmiscinfo otherclass="manual" class="manual">Filter intermediate plugin for IPFIXcol.</refmiscinfo>
